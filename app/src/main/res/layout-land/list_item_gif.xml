<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:item_card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="gif"
            type="com.alterjuice.jgiphy.model.giphy.Gif" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/gifCard"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/cardview_shadow_start_color"
        item_card_view:cardUseCompatPadding="true">

        <include layout="@layout/gif_view" android:id="@+id/gifLayoutImage"/>


    </androidx.cardview.widget.CardView>
</layout>