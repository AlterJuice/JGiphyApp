<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:item_card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="gif"
            type="com.alterjuice.jgiphy.model.giphy.Gif" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/gifCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/cardview_shadow_start_color"
        item_card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gifConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/gifImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_stars_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gifImage"
            android:layout_alignStart="@id/gifImage"
            android:layout_alignEnd="@id/gifImage"
            android:gravity="center"
            android:text="@{gif.username}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="@{gif.hasUser? View.VISIBLE : View.GONE}"
            tools:text="Username" />


    </androidx.cardview.widget.CardView>
</layout>