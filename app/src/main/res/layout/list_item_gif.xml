<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.view.View"/>
        <variable name="gif" type="com.alterjuice.jgiphy.model.giphy.Gif"/>
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rounded"
        android:padding="20dp"
        android:backgroundTint="@color/cardview_shadow_start_color">

        <ImageView
            android:focusable="true"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/gifImage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:visibility="@{gif.username != null? View.VISIBLE: View.GONE}"
            android:backgroundTint="@color/black"
            android:src="@drawable/shape_rounded"
            tools:src="@drawable/shape_rounded"
/>
        <TextView
            android:textSize="20dp"
            tools:text="Username"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/gifImage"
            android:layout_alignEnd="@id/gifImage"
            android:layout_below="@id/gifImage"
            android:text="@{gif.user.username}"
            />


    </RelativeLayout>
</layout>