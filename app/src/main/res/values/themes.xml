<resources>
    <!-- Base application theme. -->
    <style name="Theme.JGiphy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--https://medium.com/androiddevelopers/android-styling-common-theme-attributes-8f7c50c9eaba-->
        <!--Color primary used in: AppBar, MainHorizontalDivider, some big icons, ,-->

        <!-- Status bar color. -->


        <item name="colorPrimary">@color/blue_grey_700</item>
        <item name="colorPrimaryDark">@color/blue_grey_700_dark</item>
        <item name="colorPrimaryVariant">@color/blue_grey_700_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue_grey_400</item>
        <item name="colorSecondaryVariant">@color/blue_grey_400_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/blue_grey_200</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/blue_grey_200</item>
        <!--AlertDialogBackground-->
        <item name="colorBackgroundFloating">?attr/colorSurface</item>
        <item name="colorError">@color/red_500</item>

        <!--Color of icons in normal state-->
        <item name="colorControlNormal">@color/blue_grey_700_dark</item>
        <item name="colorControlActivated">@color/white</item>

        <!--Ripple color-->
        <item name="colorControlHighlight">@color/blue_grey_700_dark</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.JGiphy.NoBar" parent="Theme.JGiphy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GifFragmentButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:foreground">?attr/selectableItemBackground</item>-->

        <item name="android:foreground">@drawable/pressed</item>
        <item name="tint">@color/blue_grey_700_dark</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="GifFragmentPanel">
        <item name="android:backgroundTint">@color/blue_grey_700</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="GifFragmentContainer">
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="elevation">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:weightSum">@dimen/gif_fragment_layout_weight</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="GifFragmentCard">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:layout_weight">@dimen/gif_fragment_layout_weight</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>